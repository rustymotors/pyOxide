{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run Python Application",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/bin/python",
			"args": [
				"-m",
				"src.main"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": []
		},
		{
			"label": "Run Tests",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/bin/python",
			"args": ["-m", "pytest"],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": []
		},
		{
			"label": "Run Tests with Coverage",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/bin/python",
			"args": ["-m", "pytest", "--cov=src", "--cov-report=html", "--cov-report=xml", "--cov-report=term-missing"],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": []
		},
		{
			"label": "Coverage Report Only",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/bin/python",
			"args": ["-m", "coverage", "report"],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": []
		},
		{
			"label": "Coverage Status",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/bin/python",
			"args": ["scripts/coverage_status.py"],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": []
		},
		{
			"label": "Open Coverage HTML Report",
			"type": "shell",
			"command": "open",
			"args": ["${workspaceFolder}/htmlcov/index.html"],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "never",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			},
			"problemMatcher": [],
			"dependsOn": "Run Tests with Coverage"
		},
		{
			"label": "Format Code",
			"type": "shell",
			"command": "bash",
			"args": [
				"-c",
				"${workspaceFolder}/.venv/bin/python -m isort src/ tests/ && ${workspaceFolder}/.venv/bin/python -m black src/ tests/"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": []
		},
		{
			"label": "Type Check",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/bin/python",
			"args": ["-m", "mypy", "src/"],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": []
		},
		{
			"label": "Lint Code",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/bin/python",
			"args": ["-m", "flake8", "src/", "tests/"],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": []
		},
		{
			"label": "View Changelog",
			"type": "shell",
			"command": "cat",
			"args": ["${workspaceFolder}/CHANGELOG.md"],
			"group": "build",
			"presentation": {
				"echo": false,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true
			},
			"problemMatcher": []
		},
		{
			"label": "Setup Pre-commit Hooks",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/bin/pre-commit",
			"args": ["install"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": []
		},
		{
			"label": "Run Pre-commit on All Files",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/bin/pre-commit",
			"args": ["run", "--all-files"],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": []
		}
	]
}
