{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run Python Application",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/bin/python",
			"args": [
				"-m",
				"src.main"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": []
		},
		{
			"label": "Run Tests",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/bin/python",
			"args": ["-m", "pytest"],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": []
		},
		{
			"label": "Format Code",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/bin/python",
			"args": ["-m", "black", "src/", "tests/"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": []
		},
		{
			"label": "Type Check",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/bin/python",
			"args": ["-m", "mypy", "src/"],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": []
		},
		{
			"label": "Lint Code",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/bin/python",
			"args": ["-m", "flake8", "src/", "tests/"],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": []
		}
	]
}